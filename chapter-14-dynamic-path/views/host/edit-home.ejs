<body>
  <%-include('../partials/header')%>
  <nav>
 <h1> register your home here:</h1>
  </nav>
    
 

 
  

<main class="max-w-xl mx-auto mt-10 bg-white p-8 rounded-lg shadow">
  <h2 class="text-2xl font-bold text-gray-800 mb-6 text-center"><%= editing ? "Register": "Edit" %> Your Home</h2>

  <form action="/host/ <%= editing ? "edit-home" :"add-home" %> method="POST" class="space-y-4">
    <div>
        <input type="hidden" name="id" value="<%= editing ? '' : home.id %>" />
      <input
        type="text"
        name="housename"
         value="<%= editing? '':home.housename %> "
        placeholder="Enter the name of your house"
        class="w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-400"
        required
      />
    </div>

    <div>
      <input
        type="text"
        name="price"
        value="<%= editing? '':home.price %> "
        placeholder="Enter the price"
        class="w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-400"
        required
      />
    </div>

    <div>
      <input
        type="text"
        name="location"
        value="<%= editing? '':home.location %> "
        placeholder="Location"
        class="w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-400"
        required
      />
    </div>

    <div>
      <input
        type="text"
        name="rating"
        value="<%= editing? '':home.rating %> "
        placeholder="Rating"
        class="w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-400"
      />
    </div>

    <div>
      <input
        type="text"
        name="image"
       value="<%= editing? '':home.photoUrl %> "
        placeholder="Enter photo URL"
        class="w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-400"
        required
      />
    </div>

    <div>
      <button
        type="submit"
        class="w-full bg-red-500 text-white py-2 px-4 rounded hover:bg-red-600 transition duration-300"
      >
       <%= editing ? "addhome": "updatehome"   %>
      </button>
    </div>
  </form>
</main>
  
</body>
</html>

