<%- include('../partials/head') %>
</head>
<body class="bg-gray-100 font-sans">

  <%- include('../partials/header') %>
  

  <main class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10 max-w-xl">
  <h2 class="text-2xl text-gray-800 font-bold text-center mb-6">
    Here are your favorites :
  </h2>
<ul class="grid grid-cols-1 sm:grid-cols-2 gap-6 mt-6">
  <% registeredHomes.forEach((home) => { %>
    <li class="bg-white rounded-2xl shadow-lg overflow-hidden border border-gray-200 transition hover:shadow-xl">
      <img src="<%= home.image %>" alt="<%= home.housename %>" class="w-full h-48 object-cover" />
      
      <div class="p-5 space-y-2">
        <h3 class="text-xl font-semibold text-gray-800">
          ✅ Home registration successful for: <%= home.housename %>
        </h3>
        <p class="text-gray-600">
          <strong>Price:</strong> $<%= home.price %> / night
        </p>
        <p class="text-gray-600">
          <strong>Location:</strong> <%= home.location %>
        </p>
        <p class="text-yellow-500 font-medium">
          ⭐ Rating: <%= home.rating %>/5
        </p>
        
         <button class="bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600 transition duration-300">
              Book
            </button>

      </div>
    </li>
   

  <% }) %>
  
</ul>



  


</main>
      
    </ul>
  </main>
</body>

</html>