<body>
  <%-include('../partials/head')%>
</head>
<body>
  <%-include('../partials/header')%>
  <nav>
 <h1>Register your home here:</h1>
  </nav>
    
 

 
  

<main class="max-w-xl mx-auto mt-10 bg-white p-8 rounded-lg shadow">
  <h2 class="text-2xl font-bold text-gray-800 mb-6 text-center">Register Your Home</h2>

  <form action="/host/add-home" method="POST" class="space-y-4">
    <div>
      <input
        type="text"
        name="housename"
        placeholder="Enter the name of your house"
        class="w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-400"
        required
      />
    </div>

    <div>
      <input
        type="text"
        name="price"
        placeholder="Enter the price"
        class="w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-400"
        required
      />
    </div>

    <div>
      <input
        type="text"
        name="location"
        placeholder="Location"
        class="w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-400"
        required
      />
    </div>

    <div>
      <input
        type="text"
        name="rating"
        placeholder="Rating"
        class="w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-400"
      />
    </div>

    <div>
      <input
        type="text"
        name="image"
        placeholder="Enter photo URL"
        class="w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-400"
        required
      />
    </div>

    <div>
      <button
        type="submit"
        class="w-full bg-red-500 text-white py-2 px-4 rounded hover:bg-red-600 transition duration-300"
      >
        Submit
      </button>
    </div>
  </form>
</main>
  
</body>
</html>